<body class="login">

<asp:Panel ID="aspPanel" runat="server" DefaultButton="btnSubmit">
<div class="login-wrapper">

 <article class="content-box minimizer">
			<header>
				<h2>Forgot Password</h2>		
			</header>
			<section>
				
				<div id="logform">
					<form id="form1" runat="server">      
                    
                    <div style="margin-bottom:10px">
                        <asp:ValidationSummary ID="vsForgotPass" ValidationGroup="check" runat="server" CssClass="notification error" HeaderText="Error notification" />                        
                   </div> 
                      <div style="margin-bottom:20px">             	
                         <asp:Label runat="server" ID="lblmsg" cssclass="notification error" Visible="false" ></asp:Label>
			          </div> 
						<dl>
                        <div id="divName" runat="server">
							<dt>
								<label>User Name<span >*</span></label>
							</dt>
							<dd>
							 <asp:TextBox ID="txtUserName" runat="server" CssClass="input"></asp:TextBox>
                             <asp:RequiredFieldValidator ValidationGroup="check" ID="rfvUserName" runat="server" class="invalid-side-note"
                             ControlToValidate="txtUserName" ErrorMessage="Enter your User Name" SetFocusOnError="True" Display="Dynamic">Invalid</asp:RequiredFieldValidator>
							</dd>
                                 <asp:Button ID="btnNext" Text="Next" runat="server" ValidationGroup="check" 
                                    onclick="btnNext_Click"  />	
                            </div>
							<div id="divQuestion"  runat="server">
                              <dt>
                              <label >  Question<span >*</span></label>
                              </dt>                   
					         <dd>
                   <%--  <asp:DropDownList ID="ddlSecurityQuestion" Width="220px"  runat="server"></asp:DropDownList>
                                  <asp:RequiredFieldValidator runat="server" ID="rfvQuestion" ControlToValidate="ddlSecurityQuestion" Display="Dynamic" ValidationGroup="check" ErrorMessage="Security Question" InitialValue="0" Text="Invalid" ForeColor="Red"></asp:RequiredFieldValidator>--%>
                                  <asp:Label ID="lblQuestion" Width="190px" runat="server"></asp:Label>
                                    
                             </dd>

                            
                                    <dt>
                                   <label>  Answer<span >*</span></label>
                              </dt>                   
					         <dd>
                      <asp:TextBox ID="txtSecurityAnswer" runat="server" ></asp:TextBox>
                                     <asp:RequiredFieldValidator runat="server" ID="rfvNew" ControlToValidate="txtSecurityAnswer" Display="Dynamic" ValidationGroup="check" ErrorMessage="Answer" Text="Invalid" ForeColor="Red"></asp:RequiredFieldValidator>
                                    
                             </dd>                            
					   
                        <asp:Button ID="btnSubmit" Text="Submit" runat="server" ValidationGroup="check" 
                                    onclick="btnSubmit_Click"  />	
                                    </div>		
                     </dl>
                        <br />
                
					</form>
				</div>
				
			</section>
		</article>
        </div> 
