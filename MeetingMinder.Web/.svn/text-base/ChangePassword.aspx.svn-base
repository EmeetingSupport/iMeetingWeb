<body class="login">
<form id="Form1" runat="server">
<asp:Panel ID="aspPanel" runat="server" >
<div>

<article class="content-box minimizer" style="margin:20px 20px;">
			<header>			
				<h2>Change Password</h2>			
			</header>
			<section>              
				<div >
                  <form class="table-form">
						<fieldset>
							<legend><font color="#AE432E"><b>Change Password</b></font></legend>
                             <dl>
                                <div style="margin-bottom:15px"><userControl:Info ID="Info" runat="server" Visible="false" />
                                      <userControl:Error ID="Error" runat="server" Visible="false" />   
                                </div>
                                <div style="margin-bottom:15px">
                                    <asp:ValidationSummary ID="ValidationSummary" runat="server" 
                                           CssClass="notification error" 
                                           HeaderText="You must enter a valid value in the following fields:" 
                                           ValidationGroup="a" />
                                </div>
                                <div>
                                <div style="width:900px;">
                                 <table width="75%">
                                     <%--<tr>
                                     <td style="width:95px;">
                                     Old Password
                                     </td>
                                     <td width="20px">
                                     :
                                     </td>
                                     <td  style="width:250px;" align="left">
                                     <asp:TextBox ID="txtOld" TextMode="Password" runat="server" Width="35%"></asp:TextBox>
                                     <asp:RequiredFieldValidator runat="server" ID="rfvOld" ControlToValidate="txtOld" ValidationGroup="a" Display="Dynamic" ErrorMessage="Old Password" Text="Please Insert Old Password" ForeColor="Red"></asp:RequiredFieldValidator>
                                     </td>
                                     </tr>--%>
                                     <tr>
                                     <td style="width:95px;">
                                     New Password
                                     </td>
                                     <td width="20px">
                                     :
                                     </td>
                                     <td  style="width:250px;" align="left">
                                     <asp:TextBox ID="txtNew" TextMode="Password" runat="server" Width="35%"></asp:TextBox>
                                     <asp:RequiredFieldValidator runat="server" ID="rfvNew" ControlToValidate="txtNew" Display="Dynamic" ValidationGroup="a" ErrorMessage="New Password" Text="Please Insert New Password" ForeColor="Red"></asp:RequiredFieldValidator>
                                      <asp:RegularExpressionValidator ID="rgePassword" runat="server" 
                                        ControlToValidate="txtNew" Display="Dynamic" ValidationGroup="a" ErrorMessage="Password length must be 5 to 15 charcters" 
                                        SetFocusOnError="True" ForeColor="Red"
                                        ValidationExpression="^\s*([^\s]\s*){5,15}$"></asp:RegularExpressionValidator>
                                 
                                     </td>
                                     </tr>
                                     <tr>
                                     <td style="width:95px;">
                                     Confirm Password
                                     </td>
                                     <td width="20px">
                                     :
                                     </td>
                                     <td  style="width:250px;" align="center">
                                     <asp:TextBox ID="txtConfirm" TextMode="Password" runat="server" Width="35%"></asp:TextBox>
                                     <asp:RequiredFieldValidator runat="server" ID="rfvConfirm" ValidationGroup="a" Display="Dynamic" ControlToValidate="txtConfirm" ErrorMessage="Confirm Password" Text="Please Insert Confirm Password" ForeColor="Red"></asp:RequiredFieldValidator>

                                     <asp:CompareValidator ID="cfvConfirm" runat="server" ControlToCompare="txtNew" ControlToValidate="txtConfirm" ErrorMessage="Confirm Password"
                                             Text="Password not match" ForeColor="Red" ValidationGroup="a" Display="Dynamic"></asp:CompareValidator>

                                               <asp:RegularExpressionValidator ID="rexConf" runat="server" 
                                        ControlToValidate="txtConfirm" Display="Dynamic" ValidationGroup="a" ErrorMessage="Password length must be 5 to 15 charcters" 
                                        SetFocusOnError="True"  ForeColor="Red"
                                        ValidationExpression="^\s*([^\s]\s*){5,15}$"></asp:RegularExpressionValidator>
                                 
                                     </td>
                                     </tr>
                                     <tr align="right">
                                        <td colspan="5" align="right"> 
                                        <asp:Button ID="btnSearch" CausesValidation="true" ValidationGroup="a" runat="server" Text="Submit" onclick="btnSubmit_Click"></asp:Button> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                        <asp:Button ID="btnCancel" runat="server" Text="Cancel" onclick="btnCancel_Click"></asp:Button>
                                 </td>
                                 </tr>
                                 </table>
                               </div>
                               <br />
						</fieldset>
                             										
					</form>									
				</div>					
				
			</section>			
		</article>
  

     <div class="clearfix">
    </div>

    </asp:Panel>
    </form>
    </body>
    </html>
